{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SassCompiler": {
    "Target": "wwwroot/css",
    "Arguments": "--style=compressed --silence-deprecation=import",
    "GenerateScopedCss": false,
    "ScopedCssFolders": [],
    "IncludePaths": [],
    "Compilations": [
      {
        "Source": "src/scss/components",
        "Target": "wwwroot/css/components"
      },
      {
        "Source": "src/scss/layout",
        "Target": "wwwroot/css/layout"
      },
      {
        "Source": "src/scss/views",
        "Target": "wwwroot/css/views"
      },
      {
        "Source": "src/scss/common/styles.scss",
        "Target": "wwwroot/css/styles.css"
      },
      {
        "Source": "src/scss/light/fluent-light.scss",
        "Target": "wwwroot/css/fluent-light.css"
      },
      {
        "Source": "src/scss/dark/fluent-dark.scss",
        "Target": "wwwroot/css/fluent-dark.css"
      }

    ],
    "Configurations": {
      "Debug": { // These options apply only to Debug builds
        "Arguments": "--style=expanded"
      }
    }
  }
}
