<script>
    DevExpress.ui.themes.current(window.localStorage.getItem("dx-theme") || "fluent.blue.light");
</script>

<body class="dx-viewport dx-device-desktop dx-device-generic dx-theme-fluent dx-theme-fluent-typography dx-color-scheme-blue-dark">
    <div id="app">
        <div id="root">
            <div class="app screen-large">
                @(Html.DevExtreme().ScrollView()
                    .Width("100%")
                    .Height("100%")
                    .Content(@<text>
                        @RenderBody()
                    </text>)
                )
            </div>
        </div>
    </div>
</body>

</html>
